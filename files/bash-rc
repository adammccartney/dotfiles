# -*- mode: sh -*-

export LC_ALL=en_GB.UTF-8
export LANG=en_GB.UTF-8
export LANGUAGE=en_GB.UTF-8


# Guix Profile stuff

# Check for a "host" profile
GUIX_EXTRA_PROFILES="$HOME/.guix-extra-profiles"
GUIX_HOME="$HOME/.guix-home"
if [ -d "$GUIX_EXTRA_PROFILES/$(hostname)/$(hostname)" ]; then
    export GUIX_PROFILE="$GUIX_EXTRA_PROFILES/$(hostname)/$(hostname)"
    . "$GUIX_PROFILE/etc/profile"
elif [ -d "$GUIX_HOME/profile" ]; then
    export GUIX_PROFILE="$GUIX_HOME/profile"
    . "$GUIX_PROFILE/etc/profile"
else
    echo "No guix profile"
fi

# Note this stuff is sometimes needed when running on foreign distros
# TODO: clean this up, we should always use the locale from the default profile
if [ ! -z $GUIX_PROFILE ]; then
    export GUIX_LOCPATH="$HOME/.guix-profile/lib/locale"
fi

# check whether we're setup to use nss-certs via guix, possibly set required variables
if [ -d "$GUIX_PROFILE/etc/ssl/certs" ]; then
    [ -v $SSL_CERT_DIR ] && export SSL_CERT_DIR="$GUIX_PROFILE/etc/ssl/certs"
    [ -v $SSL_CERT_FILE ] && export SSL_CERT_FILE="$GUIX_PROFILE/etc/ssl/certs/ca-certificates.crt"
    [ -v $GIT_SSL_CAINFO ] && export GIT_SSL_CAINFO="$SSL_CERT_FILE"
fi

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoredups

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=100000
HISTFILESIZE="$HISTSIZE"
HISTFILE="$XDG_CACHE_HOME/.bash_history"

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
shopt -s globstar

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# colored GCC warnings and errors
#export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# some more ls aliases
#alias ll='ls -l'
#alias la='ls -A'
#alias l='ls -CF'

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# guix bash completion
GUIX_BASH_COMPLETION="/var/guix/profiles/per-user/root/current-guix/etc/bash_completion.d/guix"
if [ -f ${GUIX_BASH_COMPLETION} ]; then
    . ${GUIX_BASH_COMPLETION}
fi

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

# git tools
. ~/git-completion.bash

if [ -f ~/.bash_prompt ]; then
    . ~/.bash_prompt
    ${PROMPT_COMMAND}
fi

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_functions ]; then
  . ~/.bash_functions
fi

if [ -f ~/.bash_env ] ; then
    . ~/.bash_env
fi

# use emacs keybindings
set -o emacs

# swap the control and caps key
swap_ctrl_caps

# idempotent kubectl setup
if command kubectl &> /dev/null; then
    source <(kubectl completion bash)
    complete -o default -F __start_kubectl k
fi

FZF_BASH_COMPLETIONS="$(dirname $(dirname $(realpath $(which fzf))))/etc/bash_completion.d/fzf"
if [ -f "${FZF_BASH_COMPLETIONS}" ]; then
    . "${FZF_BASH_COMPLETIONS}"
fi

FZF_KEYBINDINGS_PATH="$HOME/.fzf.keybindings.bash"
if [ -f ${FZF_KEYBINDINGS_PATH} ]; then
    . ${FZF_KEYBINDINGS_PATH}
fi


