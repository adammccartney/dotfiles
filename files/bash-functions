    cd ./build/html && python3 -m http.server
    # Serve the html docs built by sphinx
}

function pytestonchange () {
    local WATCH=$1
    local TESTS=$2
    while inotifywait -q ${WATCH};
    do
        echo -e '\n\n';
        pytest ${TESTS} -v;
    done
}

